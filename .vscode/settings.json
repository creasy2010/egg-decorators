{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/*.d.ts": { "when": "$(basename).ts" },
    "**/*.js": { "when": "$(basename).ts" },
    "**/*.js.map": { "when": "$(basename)" },
    "**/*.jsx": { "when": "$(basename).tsx" },
    "**/*.jsx.map": { "when": "$(basename)" }
  }
}
